{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/parents/:id",
      "destination": "/api/parents/[id]"
    },
    {
      "source": "/api/payments/:id",
      "destination": "/api/payments/[id]"
    },
    {
      "source": "/api/contracts/:id",
      "destination": "/api/contracts/[id]"
    },
    {
      "source": "/api/templates/:id",
      "destination": "/api/templates/[id]"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/installments/charge-overdue",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/league-fees/auto-reminders",
      "schedule": "0 9 * * 1,3,5,0"
    }
  ]
}