{
  "buildCommand": "cd app && npm run build",
  "outputDirectory": "app/.next",
  "installCommand": "cd app && npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/parents/:id",
      "destination": "/api/parents/[id]"
    },
    {
      "source": "/api/payments/:id",
      "destination": "/api/payments/[id]"
    },
    {
      "source": "/api/contracts/:id", 
      "destination": "/api/contracts/[id]"
    },
    {
      "source": "/api/templates/:id",
      "destination": "/api/templates/[id]"
    }
  ],
  "env": {
    "CLERK_PUBLISHABLE_KEY": "test_pk",
    "CLERK_SECRET_KEY": "test_sk",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_CONVEX_URL": "https://blessed-scorpion-846.convex.cloud"
  }
}